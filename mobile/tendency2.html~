	<script type="text/javascript">
	//转场页面dom加载完成后触发
	function afterchange(e,data){

	var month = data.options.data.month;
	$("#title").append(decodeURIComponent("\""+month+"\""));

	//var name="chufei";
	var dataWest = [];
	var dataEast = [];
	var dataCentral = [];
	//通过ajax返回数据填充grid
	$.ajax({
		type : "POST",
		url  : "http://9.181.142.107:8082/FinalDemo/AndroidController",
		data : {month:month,flag:'analysis',keyWord:'tendency',load:'false'},
		success : function(data) {
			var result=eval("("+data+")");
			dataWest = dataWest = result.items;
			
 			$("#wijgrid").wijgrid({
                		allowSorting: false,
                		allowPaging: true,
               			pageSize: 5,
                		data: dataWest,
                		columns: [
                    			{ headerText: "姓名",color:"white",allowSizing:true,textAlignment:"center",width:"10%",backgroundColor:"white"},
                    			{ headerText: "内容",color:"green",textAlignment:"center" },
                    			{ headerText: "时间",aggregate:"min",allowSizing:true,textAlignment:"right",width:"10%" },
                    			{ headerText: "Position",visible:false}
                		],
				columnsAutogenerationMode: "merge",
				showRowHeader:false,
				highlightCurrentCell: true
            		});

		},
		error:function(data){
			alert("error................");
		},
		dataType : "text"
	});
}
///	}
	</script>
