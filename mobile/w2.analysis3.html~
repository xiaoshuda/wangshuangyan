<!----------------------------华丽丽的分割线------------------------------向后台传递信息，并以pieChart和grid形式展现数据----------------------------->

<script type="text/javascript">
$(document).one("wijappviewpageinit", function () {
				var data = [{
					Device: '很好',
					Percent: 46.78,
					Offset: 15
				}, {
					Device: '还行',
					Percent: 23.18
				}, {
					Device: '一般',
					Percent: 20.25
				}, {
					Device: '不好',
					Percent: 5.41
				}, {
					Device: '非常差',
					Percent: 3.44
				}];

				$("#wijpiechart").wijpiechart("beginUpdate");
				$("#wijpiechart").wijpiechart({
					dataSource: data,
					data: {
						label: { bind: "Device" },
						value: { bind: "Percent" },
						offset: { bind: "Offset" }
					},
					radius: 140,
					legend: { visible: true },
					hint: {
						content: function () {
							return this.data.label + " : " + Globalize.format(this.value / this.total, "p2");
						}
					},
					header: {
						text: "对广发银行产品的总体印象"
					}
				});
				$("#wijpiechart").wijpiechart("endUpdate");

	/*以array的数据填充grid*/
	$("#wijgrid").wijgrid({
                allowSorting: true,
                allowPaging: true,
                pageSize: 3,
                data: [
                    [27, 'Canada', 'Adams, Craig', 'RW。。。。。。。。。。。。'],
                    [43, 'Canada', 'Boucher, Philippe', 'D。。。。。。。。。', 'R'],
                    [24, 'Canada', 'Cooke, Matt', 'LW。。。。。。。。。。', 'L'],
                    [87, 'Canada', 'Crosby, Sidney (C)', 'C。。。。。。。。。。', 'L'],
                    [1, 'United States', 'Curry, John', 'G。。。。。。。。。。。', 'L'], 
                ],
                columns: [
                    { headerText: "数量" },
                    { headerText: "用户地址" },
                    { headerText: "用户名" },
                    { headerText: "微博内容" }
                ]
            });

			});

</script>


	</div>
</div>

