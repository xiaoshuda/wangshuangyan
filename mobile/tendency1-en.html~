<script type="text/javascript">
		$(document).bind('pageinit',function(){ 
			$(document).bind( "pagebeforechange", beforechange);
			$(document).bind("pagechange",afterchange);
		});
		//转场成功之前触发，
		function beforechange( e, data ) {
		}
		function afterchange(e,data){	
				$("#wijlinechart").wijlinechart("beginUpdate");
				$("#wijlinechart").wijlinechart({
					showChartLabels: false,
					header: {
						text: "Data comparison"
					},
					hint: {
						content: function () {
							return this.y;
						},
						offsetY: -10
					},					
					legend: {
						visible: true
					},
					seriesList: [
					{
						label: "Initial data",
						legendEntry: true,
						data: {
							x: [new Date("10/21/2010"), new Date("10/22/2010"), new Date("10/23/2010"), new Date("10/24/2010"), new Date("10/25/2010"), new Date("10/26/2010"), new Date("10/27/2010"), new Date("10/28/2010"), new Date("10/29/2010")],
							y: [20, 18, 7, 14, 20, 21, 23, 30, 20]
						},
						markers: {
							visible: true,
							type: "circle",
							symbol: [{
								index: 2
								
							}, {
								index: 3
								
							}]
						}
					},{
						label: "处理后数据",
						legendEntry: true,
						data: {
							x: [new Date("10/21/2010"), new Date("10/22/2010"), new Date("10/23/2010"), new Date("10/24/2010"), new Date("10/25/2010"), new Date("10/26/2010"), new Date("10/27/2010"), new Date("10/28/2010"), new Date("10/29/2010")],
							y: [3, 14, 37, 4, 14, 25, 21, 15, 8]
						},
						markers: {
							visible: true,
							type: "circle",
							symbol: [{
								index: 2								
						
							}, {
								index: 3						
								
							}]
						}
					}],
					seriesStyles: [
						{ stroke: "#00A0B0", "stroke-width": 3 , opacity: 0.3},
						{ stroke: "#CC333F", "stroke-width": 3 , opacity: 0.3},
					],
					seriesHoverStyles: [{
						"stroke-width": 3, opacity: 0.5
					}]
				});
