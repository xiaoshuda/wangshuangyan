		<table id="demo-hash"></table>
	</div>
	<script>
		$(document).ready(function(){
			// array
			$("#demo-array").wijgrid({
				data: [
              		      [27, 'Canada', 'Adams, Craig', 'RW'],
              		      [43, 'Canada', 'Boucher, Philippe', 'D', 'R'],
               		      [24, 'Canada', 'Cooke, Matt', 'LW', 'L'],
              		      [87, 'Canada', 'Crosby, Sidney (C)', 'C', 'L'],
                	      [1, 'United States', 'Curry, John', 'G', 'L'], 
            		    ],
              		  columns: [
              		      { headerText: "Number" },
                	      { headerText: "Nationality" },
                              { headerText: "Player" },
                              { headerText: "Position" }
                          ]
			});
			
			var jsonx = [{field0: 0, field1: "a"}, {field0: 1, field1: "b"}];
		// hash
			$("#demo-hash").wijgrid({
				data:jsonx,
				allowPaging:true,
				pageSize:2
			});
		})		
	</script>
